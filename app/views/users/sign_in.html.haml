%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      %form.sign_in
        %header
          %h1 Sign in 
        %fieldset
          .form-group
            %label Email Address
            .row
              .col-sm-4
                %input.form-control(type="email")
          .form-group
            %label Password
            .row
              .col-sm-4
                %input.form-control(type="password")
        %fieldset.form-group.action
          %input(type="submit" value="Sign in" class="btn btn-default")
          
= content_for :head do
  %script(src="https://js.stripe.com/v2/")
  :javascript
    Stripe.setPublishableKey("#{ENV['STRIPE_PUBLISHALBE_KEY']}")
  =javascript_include_tag 'payment'

%section.register.container
  .row
    .col-sm10.col-sm-offset-1
      = bootstrap_form_for @user, html: { class: "form-horizontal", id: "payment-form" } do |f|
        %header
          %h1 Register
        %fieldset
          .form-group
            .col-sm-6
              = f.email_field :email, label: "Email Address"
          .form-group
            .col-sm-6
              = f.password_field :password, label: "Password"
          .form-group
            .col-sm-6
              = f.password_field :password_confirmation, label: "Confirm Password"
          .form-group
            .col-sm-6
              = f.text_field :username, label: "Full Name"
          = hidden_field_tag :invitation_token, @invitation_token
        %fieldset.credit_card
          %span.payment-errors
          .form-group
            %label.control-label.col-sm-2 Credit Card Number
            .col-sm-6
              %input.form-control(type="text" data-stripe="number")
          .form-group
            %label.control-label.col-sm-2 CVC
            .col-sm-6
              %input.form-control(type="text" data-stripe="cvc")
          .form-group
            %label.control-label.col-sm-2 Expiration
            .col-sm-3
              = select_month(Date.today, {add_month_numbers: true},  class: 'form-control', data: {stripe: "exp-month"})
            .col-sm-2
              = select_year(Date.today.year, {start_year: Date.today.year, end_year: Date.today.year + 4}, class: 'form-control', data: {stripe: "exp-year"})
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            %input(type="submit" value="Sign Up" class="btn btn-default")

          