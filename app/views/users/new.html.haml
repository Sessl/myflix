%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, html: { class: "form-horizontal"} do |f|
        %header
          %h1 Register
        %fieldset
          .form-group
            %label.control-label.col-sm-2 Email Address
            .col-sm-6
              = f.email_field :email, hide_label: true
          .form-group
            %label.control-label.col-sm-2 Password
            .col-sm-6
              = f.password_field :password, hide_label: true
          .form-group
            %label.control-label.col-sm-2 Full Name
            .col-sm-6
              = f.text_field :username, hide_label: true
          .form-group
            .col-sm-2        
            = f.submit "Sign Up"