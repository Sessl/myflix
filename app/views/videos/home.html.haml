%article.video_category

  - Category.all.each do |category|
    %header
      %h3
        = link_to category_path(category), nil do
          #{category.name}
    .videos.row
      - category.videos.first(6).each do |video|
        .video.col-sm-2
          = link_to video_path(video), nil do
            %img(src="#{video.small_cover_url}")
