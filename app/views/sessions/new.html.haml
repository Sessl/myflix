%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag sessions_path, class: 'sign_in' do
        %header
          %h1 Sign in
        %fieldset
          .form-group
            = label_tag :email, "Email Address"
            .row
              .col-sm-6
                = email_field_tag :email
        %fieldset
          .form-group
            = label_tag :password
            .row
              .col-sm-6
                = password_field_tag :password
        %fieldset.form-group.action
          = submit_tag "Sign in", class: 'btn btn-default'
        